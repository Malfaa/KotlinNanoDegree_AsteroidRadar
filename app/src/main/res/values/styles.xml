<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_texts">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>

    <style name="item_texts_sw600">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/text_size_sw600</item>
    </style>

    <style name="apod_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_apod_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
